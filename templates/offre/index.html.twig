{% extends 'base.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block body %}
    <h1>Offre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>DatePublication</th>
                <th>DateDebut</th>
                <th>TypeContrat</th>
                <th>NiveauDiplome</th>
                <th>Experience</th>
                <th>SoftSkills</th>
                <th>HardSkills</th>
                <th>Localisation</th>
                <th>Salaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.titre }}</td>
                <td>{{ offre.description }}</td>
                <td>{{ offre.datePublication ? offre.datePublication|date('Y-m-d') : '' }}</td>
                <td>{{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ offre.typeContrat }}</td>
                <td>{{ offre.niveauDiplome }}</td>
                <td>{{ offre.experience }}</td>
                <td>{{ offre.softSkills ? offre.softSkills|join(', ') : '' }}</td>
                <td>{{ offre.hardSkills ? offre.hardSkills|join(', ') : '' }}</td>
                <td>{{ offre.localisation }}</td>
                <td>{{ offre.salaire }}</td>
                <td>
                    <a href="{{ path('app_offre_show', {'id': offre.id}) }}">show</a>
                    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_offre_new') }}">Create new</a>
{% endblock %}
