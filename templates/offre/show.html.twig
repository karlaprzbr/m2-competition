{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ offre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ offre.datePublication ? offre.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TypeContrat</th>
                <td>{{ offre.typeContrat }}</td>
            </tr>
            <tr>
                <th>NiveauDiplome</th>
                <td>{{ offre.niveauDiplome }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ offre.experience }}</td>
            </tr>
            <tr>
                <th>SoftSkills</th>
                <td>{{ offre.softSkills ? offre.softSkills|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>HardSkills</th>
                <td>{{ offre.hardSkills ? offre.hardSkills|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ offre.localisation }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ offre.salaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">back to list</a>

    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
