<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {# {{ encore_entry_link_tags('app') }} #}
    {% endblock %}

    {% block javascripts %}
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
  </head>
  <body>
    <ul class="nav bg-primary">
        <li class="nav-item">
            <a class="nav-link active text-white" aria-current="page" href="#">RANDSTAD</a>
        </li>
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ dump('je passe ici') }}
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('login') }}">Connexion</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('register_index') }}">Inscription</a>
            </li>
        {% elseif is_granted('ROLE_CAN') %}
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_candidat_show', {id:app.user.id}) }}">Espace candidat</a>
            </li>
        {% elseif is_granted('ROLE_ENT') %}
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_entreprise_show', {id:app.user.id}) }}">Espace entreprise</a>
            </li>
        {% endif %}
    </ul>
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>